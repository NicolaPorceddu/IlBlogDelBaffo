<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Utente</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.Utente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsDetail</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.NewsDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Articles</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.Articles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewArticle</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.NewArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Notizie</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.Notizie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profilo</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.Profilo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriesAuthors</servlet-name>
        <servlet-class>it.NicolaPorceddu.fpw.blog.servlets.CategoriesAuthors</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Utente</servlet-name>
        <url-pattern>/Utente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsDetail</servlet-name>
        <url-pattern>/notizia.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Articles</servlet-name>
        <url-pattern>/articoli.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewArticle</servlet-name>
        <url-pattern>/scriviArticolo.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Notizie</servlet-name>
        <url-pattern>/notizie.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profilo</servlet-name>
        <url-pattern>/profilo.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriesAuthors</servlet-name>
        <url-pattern>/searchContent.html</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>notizie.html</welcome-file>
    </welcome-file-list>
</web-app>
